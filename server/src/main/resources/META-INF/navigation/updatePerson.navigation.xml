<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

  <rewrite pattern="/person/update/{inum}" xmlns="http://xmlns.gluu.org/jsf/pages"/>

  <navigation-rule>
    <from-view-id>/person/updatePerson.xhtml</from-view-id>

    <navigation-case>
      <from-action>#{updatePersonAction.update}</from-action>
      <from-outcome>failure</from-outcome>
      <to-view-id>/person/personInventory.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-action>#{updatePersonAction.cancel}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/person/personInventory.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-action>#{cc.attrs.deleteMethod}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/person/personInventory.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

</faces-config>
